							<div class="cta--text">
								<h6>NEW</h6>
								<h2>{{armamentPopular.name}}</h2>
								<a href="{{ path('armament',{slug:armamentPopular.slug}) }}" class="btn essence-btn">Buy Now</a>
							</div>
						</div>
					</div>
				</div>						
				{% endfor %}

			</div>
		</div>
	</div>
	<!-- ##### CTA Area End ##### -->

	<!-- ##### New Arrivals Area Start ##### -->
	<section class="new_arrivals_area section-padding-80 clearfix">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="section-heading text-center">
						<h2>Popular Products</h2>
					</div>
				</div>
			</div>
		</div>


		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="popular-products-slides owl-carousel">

						{% for armamentPopular in armamentPopular %}
							<!-- Single Product -->
							<div
								class="single-product-wrapper">

								<!-- Product Image -->
								<div class="product-img">
									<img
									src="{{ asset('assets/img/armament/')}}{{armamentPopular.image}}" alt="">

									<!-- Hover Thumb -->
									<img class="hover-img" src="{{ asset('assets/img/armament/')}}{{armamentPopular.image2}}" alt="">


								</div>
								<!-- Product Description -->
								<div class="product-description">
									<a href="{{ path('armament',{slug:armamentPopular.slug}) }}">
										<h6 class='title'>{{armamentPopular.name}}</h6>
									</a>
									<span>{{armamentPopular.calibre}}
										mm</span>
									<p class="product-price">{{(armamentPopular.price / 100)|number_format(2,',', ' ')}}â‚¬</p>

									<!-- Hover Content -->
									<div
										class="hover-content">
										<!-- Add to Cart -->
										<div class="add-to-cart-btn">
											<button type="button" class="btn btn-outline-secondary btnAdd" value="{{armamentPopular.id}}">add to cart</button>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}


					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- ##### New Arrivals Area End ##### -->

	<!-- ##### Brands Area Start ##### -->
