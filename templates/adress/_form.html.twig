{{ form_start(form) }}

<div class="row">
	<div class="col-md-12 mb-3">

		{{ form_row(form.fullName, { 'attr': {'class': 'form-control'},}) }}
	</div>
	<div class="col-12 mb-3">

		{{ form_row(form.country, { 'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-12 mb-3">

		{{ form_row(form.adress, { 'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-12 mb-3">
		{{ form_row(form.postalCode, { 'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-12 mb-3">
		{{ form_row(form.city, { 'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-12 mb-3">
		{{ form_row(form.phone, { 'attr': {'class': 'form-control'}}) }}
	</div>

	<button class="btn">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
